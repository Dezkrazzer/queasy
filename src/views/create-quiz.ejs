<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buat Kuis - Queasy</title>

    <link rel="stylesheet" href="/static/css/index.css">

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <link rel="stylesheet" href="/static/css/components/navbar.css">
    <link rel="stylesheet" href="/static/css/components/footer.css">

</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <%- include("../components/navbar.ejs"); %>

    <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
        <div x-data="quizForm()" class="space-y-8">
            <!-- Header -->
            <div class="text-center">
                <h1 class="text-4xl font-bold mb-2 bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 bg-clip-text text-transparent">
                    Buat Kuis Baru
                </h1>
                <p class="text-gray-400">Buat kuis interaktif untuk para pemain</p>
            </div>

            <!-- Quiz Info -->
            <div class="bg-gray-800 rounded-lg p-6 space-y-4">
                <h2 class="text-2xl font-semibold mb-4">Informasi Kuis</h2>
                
                <div>
                    <label class="block text-sm font-medium mb-2">Judul Kuis</label>
                    <input 
                        type="text" 
                        x-model="title"
                        placeholder="Masukkan judul kuis"
                        class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                    >
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">Deskripsi Kuis</label>
                    <textarea 
                        x-model="description"
                        placeholder="Masukkan deskripsi kuis"
                        rows="3"
                        class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                    ></textarea>
                </div>
            </div>

            <!-- Questions -->
            <div class="space-y-6">
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-semibold">Pertanyaan</h2>
                    <button 
                        @click="addQuestion()"
                        class="px-4 py-2 bg-green-600 hover:bg-green-700 rounded-lg transition duration-200 flex items-center gap-2"
                    >
                        <span>+</span>
                        <span>Tambah Pertanyaan</span>
                    </button>
                </div>

                <template x-for="(question, qIndex) in questions" :key="qIndex">
                    <div class="bg-gray-800 rounded-lg p-6 space-y-4 border-l-4 border-purple-500">
                        <!-- Question Header -->
                        <div class="flex items-center justify-between">
                            <h3 class="text-xl font-semibold">Pertanyaan <span x-text="qIndex + 1"></span></h3>
                            <button 
                                @click="removeQuestion(qIndex)"
                                class="px-3 py-1 bg-red-600 hover:bg-red-700 rounded-lg transition duration-200 text-sm"
                                x-show="questions.length > 1"
                            >
                                Hapus
                            </button>
                        </div>

                        <!-- Question Text -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Teks Pertanyaan</label>
                            <input 
                                type="text" 
                                x-model="question.question_text"
                                placeholder="Masukkan pertanyaan"
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                            >
                        </div>

                        <!-- Time Limit -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Batas Waktu (detik)</label>
                            <input 
                                type="number" 
                                x-model.number="question.time_limit"
                                min="5"
                                max="300"
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                            >
                        </div>

                        <!-- Answers -->
                        <div class="space-y-3">
                            <div class="flex items-center justify-between">
                                <label class="block text-sm font-medium">Pilihan Jawaban</label>
                                <button 
                                    @click="addAnswer(qIndex)"
                                    class="px-3 py-1 bg-blue-600 hover:bg-blue-700 rounded-lg transition duration-200 text-sm"
                                    x-show="question.answers.length < 6"
                                >
                                    + Tambah Jawaban
                                </button>
                            </div>

                            <template x-for="(answer, aIndex) in question.answers" :key="aIndex">
                                <div class="flex items-center gap-3 bg-gray-700 p-3 rounded-lg">
                                    <!-- Radio Button for Correct Answer -->
                                    <input 
                                        type="radio" 
                                        :name="'correct-' + qIndex"
                                        :checked="answer.is_correct"
                                        @click="setCorrectAnswer(qIndex, aIndex)"
                                        class="w-5 h-5 text-purple-500 cursor-pointer"
                                    >
                                    
                                    <!-- Answer Text -->
                                    <input 
                                        type="text" 
                                        x-model="answer.text"
                                        placeholder="Masukkan jawaban"
                                        class="flex-grow px-3 py-2 bg-gray-600 border border-gray-500 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                                    >
                                    
                                    <!-- Remove Answer Button -->
                                    <button 
                                        @click="removeAnswer(qIndex, aIndex)"
                                        class="px-3 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition duration-200 text-sm"
                                        x-show="question.answers.length > 2"
                                    >
                                        âœ•
                                    </button>
                                </div>
                            </template>

                            <p class="text-xs text-gray-400 mt-2">
                                <i data-feather="info" class="inline w-4 h-4"></i>
                                Pilih radio button untuk menandai jawaban yang benar
                            </p>
                        </div>
                    </div>
                </template>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end gap-4 pt-4">
                <a 
                    href="/dashboard"
                    class="px-6 py-3 bg-gray-700 hover:bg-gray-600 rounded-lg transition duration-200 font-semibold"
                >
                    Batal
                </a>
                <button 
                    @click="submitForm()"
                    class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg transition duration-200 font-semibold"
                >
                    Simpan Kuis
                </button>
            </div>

            <!-- Loading/Error Message -->
            <div x-show="loading" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
                <div class="bg-gray-800 p-6 rounded-lg">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-500 mx-auto"></div>
                    <p class="mt-4 text-center">Menyimpan kuis...</p>
                </div>
            </div>

            <div x-show="error" class="fixed top-4 right-4 bg-red-600 p-4 rounded-lg z-50 shadow-lg">
                <p x-text="error"></p>
            </div>
        </div>
    </main>

    <%- include("../components/footer.ejs"); %>

    <script src="/static/js/create-quiz.js"></script>
    <script>
        feather.replace();
    </script>
</body>
</html>
