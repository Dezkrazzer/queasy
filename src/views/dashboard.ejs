<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Queasy Host</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 border-b border-purple-500/30 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent">
                Queasy Dashboard
            </h1>
            <div class="flex items-center space-x-4">
                <span class="text-gray-300">Welcome, <%= username %></span>
                <a href="/api/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition-colors">
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold">Kuis Saya</h2>
            <a href="/quiz/create" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                <i data-feather="plus" class="inline w-5 h-5 mr-2"></i>
                Buat Kuis Baru
            </a>
        </div>

        <div id="message" class="hidden mb-4 p-4 rounded-lg"></div>

        <% if (quizzes.length === 0) { %>
            <div class="text-center py-16 bg-gray-800 rounded-2xl border border-gray-700">
                <i data-feather="inbox" class="w-16 h-16 mx-auto text-gray-500 mb-4"></i>
                <p class="text-xl text-gray-400">Anda belum memiliki kuis</p>
                <p class="text-gray-500 mt-2">Buat kuis pertama Anda sekarang!</p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% quizzes.forEach(quiz => { %>
                    <div class="bg-gray-800 rounded-xl border border-purple-500/30 p-6 hover:border-purple-500 transition-all duration-300">
                        <h3 class="text-xl font-bold mb-2 text-white"><%= quiz.title %></h3>
                        <p class="text-gray-400 mb-4 line-clamp-2"><%= quiz.description || 'Tidak ada deskripsi' %></p>
                        
                        <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                            <span><i data-feather="calendar" class="inline w-4 h-4"></i> <%= new Date(quiz.created_at).toLocaleDateString() %></span>
                        </div>

                        <button onclick="startGame(<%= quiz.quiz_id %>)" 
                            class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white py-2 rounded-lg font-semibold transition-all duration-300">
                            <i data-feather="play" class="inline w-4 h-4 mr-2"></i>
                            Mulai Game
                        </button>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <script>
        feather.replace();

        // Inisialisasi Socket.IO
        const socket = io({
            path: "/queasy-socket/"
        });

        function startGame(quizId) {
            console.log('Memulai game untuk quiz_id:', quizId);
            socket.emit('create_game', { quiz_id: quizId });
        }

        socket.on('game_created', (data) => {
            console.log('Game dibuat dengan kode:', data.gameCode);
            showMessage(`Game berhasil dibuat! Kode: ${data.gameCode}`, 'success');
            
            // Redirect ke lobby setelah 1 detik
            setTimeout(() => {
                window.location.href = `/lobby/${data.gameCode}`;
            }, 1000);
        });

        socket.on('error', (data) => {
            console.error('Error:', data.message);
            showMessage(data.message, 'error');
        });

        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.className = 'mb-4 p-4 rounded-lg ' + 
                (type === 'success' ? 'bg-green-500/20 text-green-400 border border-green-500' : 
                                      'bg-red-500/20 text-red-400 border border-red-500');
            messageDiv.textContent = text;
            messageDiv.classList.remove('hidden');

            setTimeout(() => {
                messageDiv.classList.add('hidden');
            }, 5000);
        }
    </script>
</body>
</html>
