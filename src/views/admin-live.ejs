<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Quiz Monitor - Queasy</title>
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col" x-data="adminLiveQuiz('<%= gameCode %>')">
    <!-- Top Navbar -->
    <nav class="fixed top-0 left-0 right-0 bg-gray-900/95 backdrop-blur-sm py-3 px-6 z-50 border-b border-purple-500/30">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <!-- Left: Game Code -->
            <div class="flex items-center gap-3">
                <i data-feather="hash" class="w-5 h-5 text-purple-400"></i>
                <span class="text-purple-400 font-mono text-lg font-bold"><%= gameCode %></span>
            </div>
            
            <!-- Center: Quiz Title -->
            <div class="text-center flex-1 px-4">
                <h1 class="text-xl md:text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent" x-text="quizTitle">
                    Loading Quiz...
                </h1>
            </div>
            
            <!-- Right: Action Buttons -->
            <div class="flex items-center gap-2">
                <button @click="toggleFullscreen()" class="p-2 hover:bg-purple-600/30 rounded-lg transition-colors" title="Fullscreen">
                    <i data-feather="maximize" class="w-5 h-5"></i>
                </button>
                <button @click="endQuiz()" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition-colors font-semibold">
                    <i data-feather="x-circle" class="w-4 h-4 inline mr-1"></i>
                    End Quiz
                </button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow pt-20 pb-24 px-4">
        <div class="max-w-7xl mx-auto">
            <!-- Timer & Stats Bar -->
            <div class="bg-gradient-to-r from-purple-900/50 to-pink-900/50 rounded-2xl p-6 mb-6 border border-purple-500/30">
                <div class="flex flex-wrap justify-between items-center gap-4">
                    <div class="flex items-center gap-3">
                        <i data-feather="clock" class="w-6 h-6 text-yellow-400"></i>
                        <div>
                            <p class="text-sm text-gray-400">Time Remaining</p>
                            <p class="text-2xl font-bold text-yellow-400" x-text="formatTime(timer)">00:00</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <i data-feather="help-circle" class="w-6 h-6 text-blue-400"></i>
                        <div>
                            <p class="text-sm text-gray-400">Current Question</p>
                            <p class="text-2xl font-bold text-white">
                                <span x-text="currentQuestionIndex + 1">1</span> / <span x-text="totalQuestions">10</span>
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <i data-feather="users" class="w-6 h-6 text-green-400"></i>
                        <div>
                            <p class="text-sm text-gray-400">Total Participants</p>
                            <p class="text-2xl font-bold text-white" x-text="participants.length">0</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left Column: Stats & Question -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Live Answer Stats -->
                    <div class="bg-gray-800/80 rounded-2xl p-6 border border-purple-500/30">
                        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
                            <i data-feather="bar-chart-2" class="w-5 h-5 text-purple-400"></i>
                            Live Answer Statistics
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Pie Chart -->
                            <div class="flex items-center justify-center">
                                <canvas id="answerPieChart" class="max-w-[250px]"></canvas>
                            </div>
                            
                            <!-- Stats List -->
                            <div class="space-y-4">
                                <div class="bg-green-900/30 border border-green-500/50 rounded-lg p-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-green-400 font-semibold">Correct Answer</span>
                                        <span class="text-2xl font-bold text-green-400" x-text="stats.correct + '/' + participants.length">0/0</span>
                                    </div>
                                    <div class="mt-2 bg-gray-700 rounded-full h-2">
                                        <div class="bg-green-500 h-2 rounded-full transition-all duration-500" :style="'width: ' + (participants.length > 0 ? (stats.correct / participants.length * 100) : 0) + '%'"></div>
                                    </div>
                                </div>
                                
                                <div class="bg-red-900/30 border border-red-500/50 rounded-lg p-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-red-400 font-semibold">Incorrect Answer</span>
                                        <span class="text-2xl font-bold text-red-400" x-text="stats.incorrect + '/' + participants.length">0/0</span>
                                    </div>
                                    <div class="mt-2 bg-gray-700 rounded-full h-2">
                                        <div class="bg-red-500 h-2 rounded-full transition-all duration-500" :style="'width: ' + (participants.length > 0 ? (stats.incorrect / participants.length * 100) : 0) + '%'"></div>
                                    </div>
                                </div>
                                
                                <div class="bg-gray-700/50 border border-gray-600 rounded-lg p-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-400 font-semibold">Unattempted</span>
                                        <span class="text-2xl font-bold text-gray-400" x-text="stats.unattempted + '/' + participants.length">0/0</span>
                                    </div>
                                    <div class="mt-2 bg-gray-700 rounded-full h-2">
                                        <div class="bg-gray-500 h-2 rounded-full transition-all duration-500" :style="'width: ' + (participants.length > 0 ? (stats.unattempted / participants.length * 100) : 0) + '%'"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Question Details -->
                    <div class="bg-gray-800/80 rounded-2xl p-6 border border-purple-500/30">
                        <div class="flex justify-between items-start mb-4">
                            <h2 class="text-xl font-bold flex items-center gap-2">
                                <i data-feather="message-square" class="w-5 h-5 text-purple-400"></i>
                                Current Question
                            </h2>
                            <div class="flex gap-2">
                                <button @click="toggleBlur()" class="px-3 py-1 text-sm rounded-lg transition-colors" :class="blurAnswers ? 'bg-purple-600' : 'bg-gray-700 hover:bg-gray-600'">
                                    <i data-feather="eye" class="w-4 h-4 inline mr-1"></i>
                                    <span x-text="blurAnswers ? 'Show' : 'Hide'">Hide</span>
                                </button>
                                <button @click="showCorrectAnswer = !showCorrectAnswer" class="px-3 py-1 text-sm rounded-lg transition-colors" :class="showCorrectAnswer ? 'bg-green-600' : 'bg-gray-700 hover:bg-gray-600'">
                                    <i data-feather="check-circle" class="w-4 h-4 inline mr-1"></i>
                                    Key
                                </button>
                            </div>
                        </div>
                        
                        <!-- Question Text -->
                        <div class="bg-gray-700/50 rounded-lg p-4 mb-6">
                            <p class="text-lg text-white" x-text="currentQuestion.question_text">Loading question...</p>
                        </div>
                        
                        <!-- Answer Options -->
                        <div class="space-y-3">
                            <template x-for="(answer, index) in currentQuestion.answers" :key="answer.answer_id">
                                <div class="relative overflow-hidden rounded-lg border-2 transition-all" :class="{
                                    'border-green-500 bg-green-900/30': showCorrectAnswer && answer.is_correct,
                                    'border-gray-600 bg-gray-700/30': !showCorrectAnswer || !answer.is_correct
                                }">
                                    <div class="flex items-center justify-between p-4" :class="blurAnswers && 'blur-sm'">
                                        <div class="flex items-center gap-3 flex-1">
                                            <div class="w-8 h-8 rounded-full flex items-center justify-center font-bold" :class="{
                                                'bg-green-600': showCorrectAnswer && answer.is_correct,
                                                'bg-gray-600': !showCorrectAnswer || !answer.is_correct
                                            }" x-text="String.fromCharCode(65 + index)">A</div>
                                            <span class="text-white" x-text="answer.answer_text">Answer option</span>
                                            <span x-show="showCorrectAnswer && answer.is_correct" class="ml-2 text-green-400 font-bold">
                                                <i data-feather="check" class="w-4 h-4 inline"></i> Correct
                                            </span>
                                        </div>
                                        <div class="flex items-center gap-3">
                                            <span class="text-2xl font-bold text-purple-400" x-text="getAnswerCount(answer.answer_id)">0</span>
                                            <i data-feather="users" class="w-5 h-5 text-purple-400"></i>
                                        </div>
                                    </div>
                                    <!-- Progress Bar -->
                                    <div class="h-1 bg-gray-800">
                                        <div class="h-full bg-purple-500 transition-all duration-500" :style="'width: ' + (participants.length > 0 ? (getAnswerCount(answer.answer_id) / participants.length * 100) : 0) + '%'"></div>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Participants -->
                <div class="lg:col-span-1">
                    <div class="bg-gray-800/80 rounded-2xl p-6 border border-purple-500/30 sticky top-24">
                        <h2 class="text-xl font-bold mb-4 flex items-center justify-between">
                            <span class="flex items-center gap-2">
                                <i data-feather="users" class="w-5 h-5 text-purple-400"></i>
                                Participants
                            </span>
                            <span class="text-sm text-gray-400" x-text="getSubmittedCount() + '/' + participants.length + ' submitted'">0/0</span>
                        </h2>
                        
                        <!-- Participant List -->
                        <div class="space-y-2 max-h-[calc(100vh-250px)] overflow-y-auto custom-scrollbar">
                            <template x-for="participant in participants" :key="participant.id">
                                <div class="bg-gray-700/50 rounded-lg p-3 flex items-center justify-between hover:bg-gray-700 transition-colors">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center font-bold text-white" x-text="participant.name.charAt(0).toUpperCase()">A</div>
                                        <div>
                                            <p class="font-semibold text-white" x-text="participant.name">Player Name</p>
                                            <p class="text-xs text-gray-400" x-text="'Score: ' + participant.score">Score: 0</p>
                                        </div>
                                    </div>
                                    <div>
                                        <span x-show="participant.hasAnswered" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-900/50 text-green-400 border border-green-500/50">
                                            <i data-feather="check" class="w-3 h-3 mr-1"></i>
                                            Submitted
                                        </span>
                                        <span x-show="!participant.hasAnswered" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-yellow-900/50 text-yellow-400 border border-yellow-500/50">
                                            <i data-feather="edit-3" class="w-3 h-3 mr-1"></i>
                                            Attempting
                                        </span>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer: Question Navigation -->
    <footer class="fixed bottom-0 left-0 right-0 bg-gray-900/95 backdrop-blur-sm border-t border-purple-500/30 p-4 z-40">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <button @click="previousQuestion()" :disabled="currentQuestionIndex === 0" class="px-6 py-2 bg-purple-600 hover:bg-purple-700 disabled:bg-gray-700 disabled:cursor-not-allowed rounded-lg font-semibold transition-colors flex items-center gap-2">
                <i data-feather="chevron-left" class="w-4 h-4"></i>
                Previous
            </button>
            
            <div class="text-center">
                <p class="text-sm text-gray-400">Question Navigation</p>
                <p class="font-bold" x-text="'Question ' + (currentQuestionIndex + 1) + ' of ' + totalQuestions">Question 1 of 10</p>
            </div>
            
            <button @click="nextQuestion()" :disabled="currentQuestionIndex >= totalQuestions - 1" class="px-6 py-2 bg-purple-600 hover:bg-purple-700 disabled:bg-gray-700 disabled:cursor-not-allowed rounded-lg font-semibold transition-colors flex items-center gap-2">
                Next
                <i data-feather="chevron-right" class="w-4 h-4"></i>
            </button>
        </div>
    </footer>

    <style>
        .custom-scrollbar::-webkit-scrollbar {
            width: 8px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: rgba(55, 65, 81, 0.5);
            border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(147, 51, 234, 0.5);
            border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(147, 51, 234, 0.8);
        }
    </style>

    <script>
        feather.replace();
    </script>
    <script src="/static/js/admin-live.js"></script>
</body>
</html>
