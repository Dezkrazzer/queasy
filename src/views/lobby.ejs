<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Lobby - Queasy</title>
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico">
    
    <link rel="stylesheet" href="/static/style.css">
    <link rel="stylesheet" href="/static/css/components/navbar.css">
    <link rel="stylesheet" href="/static/css/components/footer.css">
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.globe.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <%- include("../components/navbar.ejs"); %>
    
    <main class="flex-grow pt-20">
        <section class="bg-gradient-to-r from-purple-900/50 to-pink-900/50 py-12">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 bg-clip-text text-transparent">
                    Game Lobby
                </h1>
                <div class="max-w-2xl mx-auto">
                    <div class="bg-gray-800/80 rounded-2xl p-6 border border-purple-500/30">
                        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                            <div class="text-left">
                                <h2 class="text-2xl font-bold text-white mb-2">Quiz: General Knowledge</h2> <div class="flex items-center gap-4 text-gray-300">
                                    <div class="flex items-center gap-2">
                                        <i data-feather="hash" class="w-4 h-4"></i>
                                        <span class="font-mono text-lg"><%= gameCode %></span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <i data-feather="clock" class="w-4 h-4"></i>
                                        <span id="gameStatus">Waiting for host...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Host Controls - Below Quiz Info -->
                        <div id="hostControls" class="mt-4 hidden">
                            <button id="startGame" class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                                <i data-feather="play" class="inline w-5 h-5 mr-2"></i>
                                Start Game
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-12">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <!-- Players List -->
                    <div class="bg-gray-800/80 rounded-2xl p-6 border border-purple-500/30">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-2xl font-bold text-white">Players in Lobby</h3>
                            <div class="flex items-center gap-2 text-gray-300">
                                <i data-feather="users" class="w-5 h-5"></i>
                                <span id="playerCount" class="text-lg">0 Players</span>
                            </div>
                        </div>
                        
                        <div id="playersGrid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-6">
                        </div>
                        
                        <!-- Leave Lobby Button -->
                        <div class="mt-8 pt-6 border-t border-purple-500/30">
                            <button id="leaveBtn" class="w-full bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                                <i data-feather="log-out" class="inline w-5 h-5 mr-2"></i>
                                Leave Lobby
                            </button>
                        </div>
                        
                        <!-- Host Controls -->
                        <div id="hostControls" class="mt-6 pt-6 border-t border-purple-500/30 hidden">
                            <button id="startGame" class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                                <i data-feather="play" class="inline w-5 h-5 mr-2"></i>
                                Start Game
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include("../components/footer.ejs"); %>
    
    <script src="/static/js/navbar.js"></script>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        // Tangkap variabel gameCode dari EJS
        const gameCode = '<%= gameCode %>';
        
        // Inisialisasi koneksi socket
        const socket = io({
          path: "/queasy-socket/"
        });

        // --- Ambil Elemen DOM ---
        const playersGrid = document.getElementById('playersGrid');
        const playerCount = document.getElementById('playerCount');
        const leaveBtn = document.getElementById('leaveBtn');
        const startGame = document.getElementById('startGame');
        const hostControls = document.getElementById('hostControls');

        // --- State Lokal ---
        let localPlayers = [];

        // --- Fungsi Helper untuk Render ---
        
        // Fungsi untuk me-render daftar pemain
        function updatePlayersDisplay(players) {
            localPlayers = players;
            playersGrid.innerHTML = '';
            
            const totalPlayers = players.length;

            players.forEach(player => {
                const playerCard = document.createElement('div');
                playerCard.className = 'bg-gray-900/50 rounded-xl p-4 border border-purple-500/30 transition-all duration-300 hover:border-purple-500';
                
                playerCard.innerHTML = `
                    <div class="flex items-center gap-3">
                        <img src="https://ui-avatars.com/api/?name=${player.name}&background=random" alt="${player.name}" class="w-12 h-12 rounded-full object-cover border-2 border-purple-500" />
                        <div class="flex-grow">
                            <div class="flex items-center gap-2">
                                <span class="font-semibold text-white">${player.name}</span>
                                ${player.isHost ? '<span class="bg-purple-500 text-white text-xs px-2 py-1 rounded-full">HOST</span>' : ''}
                            </div>
                        </div>
                    </div>
                `;
                playersGrid.appendChild(playerCard);
            });
            
            // Update hitungan pemain
            playerCount.textContent = `${totalPlayers} Players`;
        }

        // --- Event Listeners (Aksi Pengguna) ---

        // 1. Tombol "Start Game" (Host)
        startGame.addEventListener('click', () => {
            // Kirim perintah start ke server
            socket.emit('start_game', { code: gameCode });
        });
        
        // 2. Tombol "Leave Lobby"
        leaveBtn.addEventListener('click', () => {
            if (confirm('Apakah Anda yakin ingin keluar dari lobi?')) {
                window.location.href = '/';
            }
        });

        // --- Socket Listeners (Data dari Server) ---

        // 1. Saat halaman dimuat, langsung join lobi
        socket.emit('join_lobby', { code: gameCode });

        // 2. Menerima update daftar pemain (karena ada yg join/leave/ready)
        socket.on('player_list_update', (playerList) => {
            console.log('Menerima update pemain:', playerList);
            updatePlayersDisplay(playerList);
            feather.replace();
        });

        // 3. Konfirmasi bahwa kita adalah host
        socket.on('you_are_host', () => {
            console.log('Server mengonfirmasi: Saya adalah host');
            hostControls.classList.remove('hidden');
        });
        
        // 4. Game dimulai oleh host!
        socket.on('game_started', (firstQuestion) => {
            // (Logika countdown Anda yang canggih bisa ditaruh di sini)
            const overlay = document.createElement('div');
            overlay.className = 'fixed inset-0 bg-black/80 flex items-center justify-center z-50';
            overlay.innerHTML = `<div class="text-center"><div class="text-8xl font-bold text-white mb-4 countdown">3</div>`;
            document.body.appendChild(overlay);
            
            let count = 3;
            const countdownEl = overlay.querySelector('.countdown');
            
            const countdown = setInterval(() => {
                count--;
                if (count > 0) {
                    countdownEl.textContent = count;
                } else {
                    clearInterval(countdown);
                    overlay.remove();
                    // Nanti kita arahkan ke halaman kuis
                    alert('GAME MULAI! Pertanyaan: ' + firstQuestion.question);
                    // window.location.href = `/quiz/${gameCode}`;
                }
            }, 1000);
        });

        // 5. Jika game tidak ditemukan (misal salah URL)
        socket.on('game_not_found', () => {
            alert('Error: Game tidak ditemukan! Mengarahkan kembali ke Home.');
            window.location.href = '/';
        });

        // Inisialisasi ikon
        feather.replace();
    </script>
</body>
</html>